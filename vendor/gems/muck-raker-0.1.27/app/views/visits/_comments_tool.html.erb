<div id="comments_tool" class="tool" style="display:none;">
  <div id="comments_tools_close_wrapper" class="close_link_wrapper">
    <a href="#" id="comments_tools_close" class="close_link"><%= t('muck.raker.hide')%></a>
  </div>
  <div class="tools_container">
    <div id="comments_wrapper" class="tools_wrapper">
      <%= cached_activities(@activities, true) %>
      <%= activity_scripts %>
    </div>
    <div id="comments_control">
      <% if logged_in? -%>
        <%= output_errors(t('muck.comments.problem_adding_comment'), {:class => 'help-box'}, @comment) %>
        <%= comment_form(@entry, nil, true, 'entry-comment-submit') %>
      <% else -%>
        <%= link_to t('muck.raker.login_to_comment'), login_path %>
      <% end -%>
    </div>
  </div>
</div>