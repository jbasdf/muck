<div id="registration" class="wide-form">
  <h1><%= t('muck.users.register_account', :application_name => GlobalConfig.application_name) %></h1>
  <p class="center"><%= t('muck.users.already_registered') %> <a href="<%=login_url%>"><%= t('muck.users.sign_in_now') %></a></p>
  <div class="column span-10 big-text colborder">
    <h4><%= t('muck.users.signup_header') %></h4>
    <p><%= t('muck.users.signup_pitch') %></p>
    <p><%= t('muck.users.dev_plans') %></p>
    <h4 class="center"><%= t('muck.users.signup') %></h4>
  </div>
  <div class="column span-12">
    <%= signup_form(@user) -%>
  </div>

</div>
<%= signup_form_javascript -%>